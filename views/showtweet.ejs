<%-include('header.ejs') %>
<!-- Middle: Textbox and Button -->
<div class="col-md-6">
  <h2><%=msg%></h2>
  <div class="mt-5">
    <form action="/tweetsubmit" method="post">
    <label for="exampleTextarea">Your Message:</label>
    <textarea class="form-control" id="exampleTextarea" name="post" rows="5" placeholder="Type your message here..."></textarea>
  </div>
  <div class="mt-3">
    <button class="btn btn-primary">Submit</button>
  </div>
</form>
  <!-- need to update -->
  <div class="col-md-12">
    <div class="mt-4">
      <p>Your tweets:</p>
        
      <% for( var i=0;i<result.length;i++)
      { %>
        <p><%=result[i].content%></p>
        <%}%>

    </div>
   

  </div>
</div>



